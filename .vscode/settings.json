{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true
    },
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "protoc": {
        "options": [
            "--proto_path=${workspaceRoot}/packages/proto/src"
        ]
    }
}